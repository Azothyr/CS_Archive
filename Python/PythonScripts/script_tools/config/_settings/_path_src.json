{
    "maya_version": "2024",
    "source_directory": {
        "user": Path.home(),
        "documents": Path.home() / "Documents",
        "custom_scripts": Path.home() / "Documents" / "custom_scripts",
        "tools": Path.home() / "Documents" / "custom_scripts" / "script_tools",
        "maya": Path.home() / "Documents" / "custom_scripts" / "maya_scripts",
        "user_setup": Path.home() / "Documents" / "maya" / maya_version / "scripts" / "userSetup.py",
        "maya_exe": Path("C:/Program Files/Autodesk/Maya") / maya_version / "bin"
    }
    "parent_path_directory": {
        "maya": "os.path.expanduser('~/Documents/custom_scripts/maya_scripts')",
        "tools": "os.path.expanduser('~/Documents/custom_scripts/script_tools')",
        "custom_path_map": "os.path.expanduser('~/Documents/custom_scripts/../../config/_settings/_path_library.json')",
        "custom_arg_map_path": "os.path.expanduser('~/Documents/custom_scripts/../../config/_settings/_arg_maps_index.json')"
    },
    "comp_repos": {
        "primary_comp": "C:/GitRepos",
        "secondary_comp": "C:/Repos"
    },
    "arg_map_library_base": {
              "all": "os.path.expanduser('~/Documents/custom_scripts/maya_scripts/config/_settings/_arg_maps_index.json')"
    },
    "config_location": {
        "script_tools_repo": {
          "base": "f'{current_comp_repo}/Scripts_Private/Python/PythonScripts/script_tools'",
          "path_library": "f'{current_comp_repo}/Scripts_Private/Python/PythonScripts/script_tools/config/_settings/_path_library.json'",
          "path_cache": "f'{current_comp_repo}/Scripts_Private/Python/PythonScripts/script_tools/config/_settings/_configs_cache.json'"
        },
        "maya_repo": {
          "base": "f'{current_comp_repo}/MayaPythonToolbox/maya_scripts'",
          "path_library": "f'{current_comp_repo}/MayaPythonToolbox/maya_scripts/config/_settings/_arg_maps_index.json'"
        }
    }
